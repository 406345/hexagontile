<UserControl x:Name="userControl" x:Class="HexagonTile.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HexagonTile"
             mc:Ignorable="d" Height="64" Width="64">
    <Grid >
        <Image x:Name="iconImage" Source="/resources/tile.png"/>
        <TextBlock x:Name="tbName"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Foreground="White"/>
    </Grid>
</UserControl>
